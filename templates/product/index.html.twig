{% extends 'base.html.twig' %}

{% block title %}
  Nos Produits!{% endblock %}

{% block body %}
  <div class="row">
    <div class="col-md-3">
      <h3>filtrer</h3>
      {{form(form)}}
    </div>
    <div class="col-md-9">
        <h3>Nos Produits</h3>
        <div class="row product-container">
            {% for product in products %}

            <div class="col-md-4">

                <div class="product-item">
                    <a href="{{path('product',{'slug': product.slug})}}">
                    <img src="/uploads/products/{{product.illustration}}" alt="{{product.name}}" class="img-fluid"></a>
                    <h5>{{product.name}}</h5>
                    <span class="product-subtitle">{{product.subtitle}}</span>
                    <span class="product-price">
                        <b>{{product.price/100|number_format(2)}}
                        $</b>
                    </span>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
  </div>

{% endblock %}
